@inherits Patternfly.Components.Base.PatternflyComponentBase

<nav class="@Classes" @attributes="AdditionalAttributes" aria-label="Global">
  <ul class="pf-c-nav__list">
    @ChildContent
  </ul>
</nav>

@code {
    [Parameter] public RenderFragment? ChildContent { get; set; }
    [Parameter] public bool Horizontal { get; set; } = false;

    protected override IEnumerable<string> OnIntroduceClasses()
    {
        var classes = new System.Collections.Generic.HashSet<string>(new string[] { "pf-c-nav" });
        if (Horizontal) classes.Add("pf-m-horizontal");
        return classes;
    }
}
