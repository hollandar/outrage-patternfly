@inherits Outrage.Patternfly.Components.Base.PatternflyComponentBase
<div class="@Classes" @attributes="AdditionalAttributes">
    @ChildContent
</div>
@code {
    [Parameter] public OverflowMenuGroupType GroupType { get; set; }
    [Parameter] public RenderFragment? ChildContent { get; set; }

    protected override IEnumerable<string> OnIntroduceClasses()
    {
        var classes = new List<string> { "pf-c-overflow-menu__group" };
        switch (GroupType)
        {
            case OverflowMenuGroupType.Button:
                classes.Add("pf-m-button-group");
                break;

            case OverflowMenuGroupType.IconButton:
                classes.Add("pf-m-icon-button-group");
                break;
        }
        return classes;
    }
}
