@inherits Patternfly.Components.Base.PatternflyComponentBase

<svg class="@Classes" @attributes="AdditionalAttributes" role="progressbar" aria-label="Loading..." viewBox="0 0 100 100">
    <circle class="pf-v5-c-spinner__path" cx="50" cy="50" r="45" fill="none" />
</svg>

@code {
    [Parameter] public SpinnerSize Size { get; set; } = SpinnerSize.Default;

    protected override IEnumerable<string> OnIntroduceClasses()
    {
        var classes = new HashSet<string>(new string[] { "pf-v5-c-spinner" });

        switch (Size)
        {
            case SpinnerSize.Small: classes.Add("pf-m-sm"); break;
            case SpinnerSize.Medium: classes.Add("pf-m-md"); break;
            case SpinnerSize.Large: classes.Add("pf-m-lg"); break;
            case SpinnerSize.XLarge: classes.Add("pf-m-xl"); break;
            case SpinnerSize.Default:
            default:
                break;
        }

        return classes;
    }
}
