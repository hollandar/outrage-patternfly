@inherits Patternfly.Components.Base.PatternflyComponentBase

<div class="@Classes" @attributes="AdditionalAttributes">
    @if (Header != null || Actions != null)
    {
        <div class="pf-c-card__header">
            @if (Header != null)
            {
                <div class="pf-c-card__header-main">
                    @Header
                </div>
            }
            @if (Actions != null)
            {
                if (Header == null && Title != null)
                {
                    <div class="pf-c-card__title">@Title</div>
                }

                <div class="pf-c-card__actions @(ActionsNoOffset ? "pf-m-no-offset" : string.Empty)">
                    @Actions
                </div>
            }
        </div>
    }

    @if (Header != null && Title != null)
    {
        <div class="pf-c-card__title">@Title</div>
    }

    <div class="pf-c-card__body">
        @Body
    </div>
    
    @if (Footer != null)
    {
        <div class="pf-c-card__footer">
            @Footer
        </div>
    }
</div>

@code {
    [Parameter]
    public RenderFragment? Header { get; set; }

    [Parameter]
    public RenderFragment? Actions { get; set; }

    [Parameter]
    public bool ActionsNoOffset { get; set; }

    [Parameter]
    public RenderFragment? Title { get; set; }

    [Parameter]
    public RenderFragment? Body { get; set; }

    [Parameter]
    public RenderFragment? Footer { get; set; }

    protected override IEnumerable<string> OnIntroduceClasses()
    {
        var classes = new HashSet<string>(new string[] { "pf-c-card" });


        return classes;
    }
}
