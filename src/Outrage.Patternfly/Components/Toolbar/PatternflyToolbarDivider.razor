@inherits Outrage.Patternfly.Components.Base.PatternflyComponentBase
<hr class="@Classes" @attributes="AdditionalAttributes" />
@code {
    [Parameter] public bool Vertical { get; set; } = true;
    protected override IEnumerable<string> OnIntroduceClasses()
    {
        var classes = new List<string> { "pf-v5-c-divider" };
        if (Vertical)
            classes.Add("pf-m-vertical");

        return classes;
    }
}