@page "/tabs"

@using Outrage.Patternfly.Components.Tabs
@using Outrage.Patternfly.Components.Button
@using Outrage.Patternfly.Components.Utilities

<PageTitle>Tabs</PageTitle>

<PatternflyH1>Tabs</PatternflyH1>

<PatternflyTabs>
    <PatternflyTab Icon="rocket" TabId="tab1" Title="Tab 1" TitleCssClass="ou-hidden-on-md">
        This is the content for Tab 1.
    </PatternflyTab>

    <PatternflyTab Icon="envelope" TabId="tab2" Title="Tab 2" TitleCssClass="ou-hidden-on-md">
        This is the content for Tab 2.
    </PatternflyTab>

    <PatternflyTab Icon="exclamation-circle" TabId="tab3" Title="Tab 3" Disabled="@disableTab3" TitleCssClass="ou-hidden-on-md">
        This is the content for Tab 3.
    </PatternflyTab>
</PatternflyTabs>

<PatternflyButton Clicked="@(() => disableTab3 = !disableTab3)">@(disableTab3 ? "Enable Tab 3" : "Disable Tab 3")</PatternflyButton>

@code {
    private bool disableTab3;
}
