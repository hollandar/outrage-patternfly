<div class="pf-c-panel @DeriveClass()">
    @if (Header != null)
    {
        <div class="pf-c-panel__header">@Header</div>
        <hr class="pf-c-divider" />
    }
    <div class="pf-c-panel__main">
        <div class="pf-c-panel__main-body">
            @Main
        </div>
    </div>
    @if (Footer != null)
    {
        <hr class="pf-c-divider" />
        <div class="pf-c-panel__footer">
            @Footer
        </div>
    }
</div>

@code {
    [Parameter]
    public RenderFragment Header { get; set; }

    [Parameter]
    public RenderFragment Main { get; set; }

    [Parameter]
    public RenderFragment Footer { get; set; }

    [Parameter]
    public bool Raised { get; set; }

    [Parameter]
    public bool Bordered { get; set; }

    [Parameter]
    public bool Scrollable { get; set; }

    [Parameter]
    public string? Class { get; set; }

    string DeriveClass()
    {
        var classes = new HashSet<string>(new string[] { Class });
        if (Raised)
            classes.Add("pf-m-raised");
        if (Bordered)
            classes.Add("pf-m-bordered");
        if (Scrollable)
            classes.Add("pf-m-scrollable");

        return string.Join(" ", classes);
    }
}
